{
    "name": "micro/plugin-elastic",
    "description": "Micro Framework: Elasticsearch plugin",
    "license": "MIT",
    "type": "micro-plugin",
    "authors": [
        {
            "name": "Stanislau Komar",
            "email": "head.trackingsoft@gmail.com"
        }
    ],
    "require": {
        "elasticsearch/elasticsearch": "^8",
        "micro/kernel-app": "^2.0",
        "micro/plugin-logger-core": "^2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.34"
    },
    "autoload": {
        "psr-4": {
            "Micro\\Plugin\\Elastic\\": "/"
        },
        "exclude-from-classmap": [
            "/Tests"
        ]
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
